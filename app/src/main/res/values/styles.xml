<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RadiobButtonStyle</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView"/>
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch"/>
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox"/>
    <style name="RadiobButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton"/>
    <style name="CollapsingToolbarLayoutStyle"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatus"/>
    
    <style name="LibraryEmptyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_2x</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/activity_library_empty_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
