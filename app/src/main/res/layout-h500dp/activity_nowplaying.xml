<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.doctoror.fuckoffmusicplayer.nowplaying.NowPlayingActivityModel"/>
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.doctoror.fuckoffmusicplayer.widget.NoOffsetScrimInsetsFrameLayout
            android:id="@+id/albumArtContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/albumArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="false"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="invisible"
                android:background="@color/translucentBackground">

                <TextView
                    android:id="@android:id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:minLines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    app:text="@{model.title}"
                    tools:text="Text 1"
                    tools:ignore="SelectableText"/>

                <TextView
                    android:id="@android:id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    app:text='@{model.artistAndAlbum}'
                    tools:text="Text 2"
                    tools:ignore="SelectableText"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/translucentBackground"
                    android:visibility="invisible"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

            </FrameLayout>

        </com.doctoror.fuckoffmusicplayer.widget.NoOffsetScrimInsetsFrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/controlsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="28dp">

            <TextView
                android:id="@+id/textPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minEms="2"
                android:textIsSelectable="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:formattedDuration="@{model.elapsedTime / 1000}"
                tools:text="0:00"/>

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="right|end"
                android:minEms="2"
                android:textIsSelectable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:formattedDuration="@{model.duration / 1000}"
                tools:text="0:00"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@id/textPosition"
                app:layout_constraintLeft_toRightOf="@+id/textPosition"
                app:layout_constraintEnd_toStartOf="@id/textDuration"
                app:layout_constraintRight_toLeftOf="@+id/textDuration"
                app:layout_constraintBottom_toBottomOf="@+id/textDuration"
                app:layout_constraintTop_toTopOf="@+id/textDuration"
                android:max="200"
                android:progress="@{model.progress}"/>

            <com.doctoror.fuckoffmusicplayer.widget.PressFeedbackImageButton
                android:id="@+id/btnPlay"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="28dp"
                android:background="@drawable/color_accent_circle"
                android:contentDescription="@string/Previous"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/seekBar"
                app:srcRes="@{model.btnPlayRes}"
                tools:src="@drawable/ic_play_arrow_white_36dp"/>

            <com.doctoror.fuckoffmusicplayer.widget.PressFeedbackImageButton
                android:id="@+id/btnPrev"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/grey_circle_48dp"
                android:src="@drawable/ic_fast_rewind_white_24dp"
                android:contentDescription="@string/Previous"
                app:layout_constraintRight_toLeftOf="@+id/btnPlay"
                app:layout_constraintEnd_toStartOf="@id/btnPlay"
                app:layout_constraintTop_toTopOf="@+id/btnPlay"
                app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                android:layout_marginEnd="18dp"/>

            <com.doctoror.fuckoffmusicplayer.widget.PressFeedbackImageButton
                android:id="@+id/btnNext"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/grey_circle_48dp"
                android:src="@drawable/ic_fast_forward_white_24dp"
                android:contentDescription="@string/Next"
                app:layout_constraintStart_toEndOf="@id/btnPlay"
                app:layout_constraintLeft_toRightOf="@+id/btnPlay"
                app:layout_constraintTop_toTopOf="@+id/btnPlay"
                app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                android:layout_marginStart="18dp"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>