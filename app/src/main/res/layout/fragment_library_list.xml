<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.doctoror.fuckoffmusicplayer.library.LibraryListFragmentModel"/>
    </data>

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:displayedChild="@{model.displayedChild}">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin_3x"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin_3x"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_lock_large"
                android:drawablePadding="@dimen/activity_library_permission_denied_drawable_padding"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/Music_library_needs_permission_to_access_media"/>

            <Button
                android:id="@+id/btnRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_library_permission_denied_button_margin"
                android:text="@string/Request"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin_3x"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@{model.emptyMessage}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin_3x"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@{model.errorText}"
            tools:ignore="SelectableText"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- The parent ViewGroup must be a CoordinatorLayout, FrameLayout, or RelativeLayout in
            order for the FastScroller to be properly displayed on top of the RecyclerView.-->
            <com.l4digital.fastscroll.FastScrollRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:handleColor="?attr/colorAccent"
                app:bubbleColor="?attr/colorAccent"
                app:bubbleTextColor="@android:color/white"
                app:hideScrollbar="false"
                app:recyclerAdapter="@{model.recyclerAdapter}"/>

        </FrameLayout>

    </ViewAnimator>

</layout>